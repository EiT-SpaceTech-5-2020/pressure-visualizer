#:kivy 1.11.1
#:include CustomGraph.kv

<RootContainer>:
    manager: screen_manager
    orientation: "vertical"
    ActionBar:
        size_hint_y: 0.1
        ActionView:
            ActionPrevious:
            ActionButton:
                text: "Visualize"
                on_press: root.manager.setScreen('screen_visualize')
            ActionButton:
                text: "Export"
                on_press: root.manager.setScreen('screen_export')
            ActionButton:
                text: "Calibrate"
                on_press: root.manager.setScreen('screen_calibrate')
			ActionButton:
                text: "Settings"
                on_press: root.manager.setScreen('screen_settings')

    Manager:
        id: screen_manager

<ScreenVisualize>:
	on_enter: self.onEnter()
    CustomGraph:

<ScreenExport>:
    Button:
        text: "Export"

<ScreenCalibrate>:
    Button:
        text: "Calibrate"

<ScreenSettings>:
	on_enter: self.onEnter()

<Manager>:
    id: screen_manager
    screen_visualize: screen_visualize
    screen_export: screen_export
    screen_calibrate: screen_calibrate
	screen_settings: screen_settings

    ScreenVisualize:
        id: screen_visualize
        name: 'screen_visualize'
        manager: screen_manager
    ScreenExport:
        id: screen_export
        name: 'screen_export'
        manager: screen_manager
    ScreenCalibrate:
        id: screen_calibrate
        name: 'screen_calibrate'
        manager: screen_manager
	ScreenSettings:
        id: screen_settings
        name: 'screen_settings'
        manager: screen_manager